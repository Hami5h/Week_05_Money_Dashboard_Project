<h1>Transactions</h1>

<p class="btn--wrapper">
  <a class="btn btn--action" href="/transactions/new">New transaction</a>
</p>

<table>
  <thead>
    <tr>
      <th>Merchant Name</th>
      <th>Item</th>
      <th>Type</th>
      <th>Amount Spent</th>
    </tr>
  </thead>
  <tbody>
    <% for transaction in @transactions %>
    <tr>
      <td><%= transaction.merchant.name %></td>
      <td><%= transaction.tag.name %></td>
      <td>
          <a class="btn btn--action" href="/transactions/<%= transaction.tag.type %>"><%= transaction.tag.type %></a>
      </td>
      <td> £<%= transaction.amount %></td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <td>Total Spent = £<%=@total%></td>
  </tfoot>
</table>

<p class="btn--wrapper">
  <a class="btn btn--action" href="/transactions/clothing">Clothes Spending</a>
</p>
<p class="btn--wrapper">
  <a class="btn btn--action" href="/transactions/food">Food Spending</a>
</p>
